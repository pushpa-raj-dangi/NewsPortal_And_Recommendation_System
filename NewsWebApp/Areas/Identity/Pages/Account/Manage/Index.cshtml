@page
@model IndexModel
@{ ViewData["Title"] = "Profile";
                ViewData["ActivePage"] = ManageNavPages.Index; }


<h4>Edit @ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" name="pform" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            @*<div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>*@
            <div class="form-group">

                <div class="input-group mb-3">
                    <img src="~/uploads/@Model.ProfileImg"  alt="Alternate Text" />
                    <div class="custom-file w-100">

                        <input asp-for="Input.ProfileImg" type="file" class="custom-file-input" id="inputGroupFile02">
                        <label class="custom-file-label" for="inputGroupFile02">Choose Photo</label>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" id="pnumber" class="form-control" />
                @*<span asp-validation-for="Input.PhoneNumber" class="text-danger">
            </span>*@
                <span class="d-none text-danger" id="perror">Filed is required.</span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            <a id="update-profile-button" href="/dashboard" class="btn btn-success">Cancel</a>

        </form>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('update-profile-button').addEventListener("click", (e) => {
            if (document.getElementById('pnumber').value == "") {
                document.getElementById('perror').classList.add("d-block");
                e.preventDefault();
            }
        })
    </script>
}