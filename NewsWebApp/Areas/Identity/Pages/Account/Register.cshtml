@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-5" style="background:url(/uploads/newspaper.svg);background-repeat:no-repeat">
    @*<h1>@ViewData["Title"]</h1>*@

    <div class="row">
        <div class="col-md-8">

        </div>
        <div class="col-md-4">
            <section class="login-wrap text-center">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <img id="profileHolder" src="~/uploads/user.png" class="rounded-circle shadow-sm" alt="your image" />
                        <input asp-for="Input.ProfileImg" class="form-control" type='file' id="profileImage" />
                        <span asp-validation-for="Input.ProfileImg" class="text-danger"></span>
                    </div>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-block btn-primary">Register</button>
                    <div class="form-group my-3">

                        <p>
                            Already have account ?<a class="mt-3 text-primary" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"> Login</a>
                        </p>
                        @*<p>
                                <button type="submit" asp-page-handler="SendVerificationEmail" class="btn-link" style="padding:0px;margin:0px;border:0px">Resend email confirmation</button>
                            </p>*@
                    </div>
                </form>
            </section>
        </div>

    </div>
</div>




@section Scripts{
    <script>
        $(document).ready(function () {
            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#profileHolder').attr('src', e.target.result);
                    }

                    reader.readAsDataURL(input.files[0]); // convert to base64 string
                }
            }

            $("#profileImage").change(function () {
                readURL(this);
            });
        })
    </script>
    <partial name="_ValidationScriptsPartial" />

}