@model NewsWebApp.Models.Comment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="p-5">
    <h1>Edit</h1>

    <h4>Comment</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CommentId" />
                <div class="form-group">
                    <label asp-for="CContent" class="control-label"></label>
                    <input asp-for="CContent" class="form-control" />
                    <span asp-validation-for="CContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostId" class="control-label"></label>
                    <select asp-for="PostId" class="form-control" asp-items="ViewBag.PostId"></select>
                    <span asp-validation-for="PostId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateComment" class="control-label"></label>
                    <input asp-for="DateComment" class="form-control" />
                    <span asp-validation-for="DateComment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>