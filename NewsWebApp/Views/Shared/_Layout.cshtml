
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - News Web App Sharing news across the world</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
    <link href="~/bootstrap-multiselect/css/bootstrap-multiselect.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/select2/css/select2.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300&display=swap" rel="stylesheet">

</head>

<body>


    <header>
        <div class="container-fluid my-header py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <a href="/">

                            <div class="d-flex align-items-center">
                                <img class="mr-2 logo-img" src="~/uploads/glass-cheers.png" alt="Alternate Text" />
                                <h1 class="logo">meronews.<span class="text-danger">com</span></h1>
                            </div>
                        </a>
                    </div>
                   <div class="col-md-4 d-flex align-items-center justify-content-end">
                        <form asp-controller="Home" asp-action="Search" method="get">
                            <p class="d-flex">
                             <input class="form-control" type="text" placeholder="Search..." name="Search" />
                             <button type="submit" class="btn btn-success">
                                 <i class="fa fa-search fa-lg"></i>
                             </button>
                            </p>
                        </form>
                    </div>
                    <div class="col-md-4 d-flex align-items-center justify-content-end">
                        <div class="fb">
                            <i class="fab fa-facebook-f"></i>
                        </div>
                        <div class="yt">
                            <i class="fab fa-youtube"></i>


                        </div>
                        <div class="tw">
                            <i class="fab fa-twitter"></i>

                        </div>

                        <div class="insta">
                            <i class="fab fa-instagram"></i>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar my-nav navbar-expand-sm navbar-toggleable-sm navbar-light bg-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1 align-items-center" id="main-nav">

                        <div class="spinner-box">
                            <div class="circle-border">
                                <div class="circle-core"></div>
                            </div>
                        </div>
                        @* <partial  name="_Nav" />*@

                        @*<li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">Category</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Tags" asp-action="Index">Tags</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Posts" asp-action="Index">Posts</a>
        </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="">
            @RenderBody()
        </main>
   
    <footer class="footer text-muted">
        <div class="container py-3">
            @*&copy; 2021 - NewsWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
            <div class="row">
                <div class="col-md-5">
                    <a clas="mb-5" href="/">

                        <div class="d-flex align-items-center">
                            <img class="mr-2 logo-img" src="~/uploads/glass-cheers.png" alt="Alternate Text" />
                            <h1 class="logo">meronews.<span class="text-danger">com</span></h1>
                        </div>
                    </a>

                    <h6 style="line-height:1.9">
                        The Nepal's No 1 News Portal meronews.com<br />

                        Phone +977-1-94839493, +977-1-23434456<br />

                        Email: mero@news.com
                    </h6>
                </div>
                <div class="col-md-3">
                    <h3>News</h3>

                    <ul class="nav flex-column d-inline">


                        <li class="nav-item">
                            <a class="nav-link active p-0 m-0" href="/posts/postbycat/2">Politics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link p-0 m-0" href="#">Society</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link p-0 m-0" href="#">Entertainment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link p-0 m-0" href="#">Lifestyle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link p-0 m-0" href="#">Business</a>
                        </li>
                    </ul>


                </div>
                <div class="col-md-4">
                    <h3>Follow us on</h3>
                    <div class=" d-flex align-items-center mt-4">
                        <div class="fb">
                            <i class="fab fa-facebook-f"></i>
                        </div>
                        <div class="yt">
                            <i class="fab fa-youtube"></i>
                        </div>
                        <div class="tw">
                            <i class="fab fa-twitter"></i>


                        </div>

                        <div class="insta">
                            <i class="fab fa-instagram"></i>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/select2/js/select2.js"></script>
    <script src="~/tinymce/tinymce.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
    <script src="~/font-awesome/js/all.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/visitorCount.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
    